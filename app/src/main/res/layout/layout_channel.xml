<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="95dp">

    <ImageView
        android:id="@+id/iv_jujia"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_jujia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jujia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="家居"
        app:layout_constraintLeft_toLeftOf="@id/iv_jujia"
        app:layout_constraintRight_toRightOf="@id/iv_jujia"
        app:layout_constraintTop_toBottomOf="@id/iv_jujia" />

    <ImageView
        android:id="@+id/iv_canchu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_jujia"
        app:layout_constraintLeft_toRightOf="@id/iv_jujia"
        app:layout_constraintRight_toLeftOf="@id/tv_peijian"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_canchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="家居"
        app:layout_constraintLeft_toLeftOf="@id/iv_canchu"
        app:layout_constraintRight_toRightOf="@id/iv_canchu"
        app:layout_constraintTop_toBottomOf="@id/iv_canchu" />

    <ImageView
        android:id="@+id/iv_peijian"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_jujia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_peijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="家居"
        app:layout_constraintLeft_toLeftOf="@id/iv_peijian"
        app:layout_constraintRight_toRightOf="@id/iv_peijian"
        app:layout_constraintTop_toBottomOf="@id/iv_peijian" />

    <ImageView
        android:id="@+id/iv_fuzhuang"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_jujia"
        app:layout_constraintLeft_toRightOf="@id/iv_peijian"
        app:layout_constraintRight_toLeftOf="@id/iv_zhiqu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fuzhuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="家居"
        app:layout_constraintLeft_toLeftOf="@id/iv_fuzhuang"
        app:layout_constraintRight_toRightOf="@id/iv_fuzhuang"
        app:layout_constraintTop_toBottomOf="@id/iv_fuzhuang" />

    <ImageView
        android:id="@+id/iv_zhiqu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_jujia"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_zhiqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="家居"
        app:layout_constraintLeft_toLeftOf="@id/iv_zhiqu"
        app:layout_constraintRight_toRightOf="@id/iv_zhiqu"
        app:layout_constraintTop_toBottomOf="@id/iv_zhiqu" />


</androidx.constraintlayout.widget.ConstraintLayout>