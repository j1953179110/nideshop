<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#F8F8F8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_goodlist"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="1dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="制造商"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/ll"
        app:layout_constraintRight_toRightOf="@+id/ll"
        app:layout_constraintTop_toBottomOf="@id/ll" />


    <TextView
        android:id="@+id/tv_listprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="39元起"
        android:textColor="#ED1C1C"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/ll"
        app:layout_constraintRight_toRightOf="@id/ll"
        app:layout_constraintTop_toBottomOf="@id/tv_listname" />

</androidx.constraintlayout.widget.ConstraintLayout>