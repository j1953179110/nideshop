<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_newgood"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_goodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="制造商"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_newgood"
        app:layout_constraintRight_toRightOf="@+id/iv_newgood"
        app:layout_constraintTop_toBottomOf="@id/iv_newgood" />


    <TextView
        android:id="@+id/tv_goodprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="39元起"
        android:textColor="#ED1C1C"
        app:layout_constraintLeft_toLeftOf="@id/iv_newgood"
        app:layout_constraintRight_toRightOf="@id/iv_newgood"
        app:layout_constraintTop_toBottomOf="@id/tv_goodname" />

</androidx.constraintlayout.widget.ConstraintLayout>